@model Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-3" >
  <div class="row g-0">
    <div class="col-md-4">
      <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="Product image">
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <h5 class="card-title">@Model.Category.Name</h5>
        <p class="card-text">@Model.Name</p>
        <p class="card-text"><small class="text-muted">@Model.Price</small></p>
      </div>
    </div>
  </div>
</div>

