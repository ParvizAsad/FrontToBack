@model ExpertsTitle

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>Update Category</h2>
    <form method="post">
        
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <textarea class="form-control" asp-for="@Model.Title" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="@Model.Title"></span>
        </div>

          <div class="mb-3">
            <label asp-for="@Model.SubTitle" class="form-label">SubTitle</label>
         <textarea class="form-control" asp-for="SubTitle" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="@Model.SubTitle"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <partial name="_EditorPartial" />

     
}