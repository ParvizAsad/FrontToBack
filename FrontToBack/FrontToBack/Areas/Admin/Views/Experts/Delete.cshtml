@model Expert

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <img src="~/img/@Model.Image" style="width: 150px; height: 150px;"/>
                  <h4 class="card-title">Name: @Model.Name</h4>
                  <h4 class="card-title">Job: @Model.Job</h4>
                <p class="text-danger">Are you sure to delets?</p>
            </div>
        </div>
    </div>
</div>
<div>
    <form class="forms-sample" method="post">
        <button type="submit" class="btn btn-danger mr-2">Submit</button>
    </form>
    <button class="btn btn-light" asp-action="Index">Cancel</button>
</div>



