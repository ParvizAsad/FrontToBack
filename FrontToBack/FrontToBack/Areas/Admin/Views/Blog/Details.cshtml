@model BlogContent

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card mb-12" >
  <div class="row g-0">
    <div class="col-md-5">
      <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="Blog image">
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Content</p>
        <p class="card-text"><small class="text-muted">@Model.date.ToShortDateString()</small></p>
      </div>
    </div>
  </div>
</div>
