@model BlogContent

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <img src="~/Admin/images/@Model.Image" /> 
               <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Content</p>
                <p class="card-text"><small class="text-muted">@Model.date.ToShortDateString()</small></p>
                <p class="text-danger">Are you sure to delets?</p>
            </div>
        </div>
    </div>
</div>
<div>
    <form class="forms-sample" method="post">
        <button type="submit" class="btn btn-danger mr-2">Submit</button>
    </form>
    <button class="btn btn-light" asp-action="Index">Cancel</button>
</div>