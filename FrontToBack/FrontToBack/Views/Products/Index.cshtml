@*@model List<Product>*@
@{
    ViewData["Title"] = "Index";
}

<section id="products">
    <div class="container">
        <div class="row" id="productRow">
            <input type="hidden" value="@ViewBag.ProductCount" id="productsCount" />
            @await Component.InvokeAsync("Product", 4)
        </div>
        <div class="row justify-content-center">
            <button class="btn btn-primary" id="LoadMore">LoadMore</button>
        </div>
    </div>
</section>

